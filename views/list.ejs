<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel = "stylesheet" href="css/style.css">
    <title>to do list</title>
</head>
<body>
<main class="main">
    <div class="cont">

        <h1><%= kindofday %></h1>
        <ul>
            
        </ul>
        <div class="box">
        <% newitem.forEach(function(item){ %>
        <form class="form" action="/delete" method="post">
            <div class="y" id="itm">
                <input type="checkbox" name="delete" value="<%= item._id %>" onChange="this.form.submit()">
                <p><%= item.name %></p>
            </div>
                <input type="hidden" name="listname" value="<%= kindofday %>">
        </form>
        <% }) %>
    </div>

        <form class="add_inp"action="/" method="post">
            <input type="text" name="additem" placeholder="Add New Item">
            <button type="submit" name="btn" value="<%= kindofday %>">+</button>
        </form>
</div>
    
</main>
</body>
</html>